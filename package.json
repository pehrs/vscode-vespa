{
  "name": "vscode-vespa",
  "displayName": "vscode-vespa",
  "description": "Vespa AI Extension",
  "version": "1.1.2",
  "publisher": "pehrs-com",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "media/vespa.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pehrs/vscode-vespa.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters",
    "Snippets",
    "Language Packs",
    "Visualization",
    "Other"
  ],
  "pricing": "Free",
  "activationEvents": [
    "onLanguage:yql",
    "onLanguage:yqlReq",
    "onLanguage:sd"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "vscode-vespa.runQuery",
        "title": "Run Vespa YQL Query",
        "icon": "$(play)"
      },
      {
        "command": "vscode-vespa.format",
        "title": "Format YQL",
        "icon": "$(code)"
      },
      {
        "command": "vscode-vespa.refreshVespaConfig",
        "title": "Reload",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-vespa.editVespaConfig",
        "title": "Edit Vespa Cluster Configuration",
        "icon": "$(settings)"
      },
      {
        "command": "vscode-vespa.selectClusterAsDefault",
        "title": "Connect to cluster"
      },
      {
        "command": "vscode-vespa.showClusterInfo",
        "title": "Show Vespa Cluser Info",
        "icon": "$(symbol-number)"
      },
      {
        "command": "vscode-vespa.showSelectedClusterInfo",
        "title": "Show Vespa Cluster Info",
        "icon": "$(database)"
      },
      {
        "command": "vscode-vespa.selectConnection",
        "title": "Connect to cluster",
        "icon": "$(database)"
      },
      {
        "command": "vscode-vespa.openSelectedFile",
        "title": "Download file",
        "icon": "$(file)"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-vespa.runQuery",
        "when": "editorLangId == yqlReq",
        "key": "ctrl+enter",
        "mac": "cmd+enter"
      },
      {
        "command": "vscode-vespa.showClusterInfo",
        "when": "editorLangId == yqlReq",
        "key": "ctrl+home",
        "mac": "cmd+home"
      },
      {
        "command": "vscode-vespa.selectConnection",
        "when": "editorLangId == yqlReq",
        "key": "ctrl+end",
        "mac": "cmd+end"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.selectConnection",
          "group": "1_run"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.selectConnection",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.runQuery",
          "group": "1_run"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.runQuery",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.editVespaConfig",
          "group": "1_run"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.editVespaConfig",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.format",
          "group": "1_run"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.format",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.showClusterInfo",
          "group": "1_run"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.showClusterInfo",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.runQuery",
          "group": "z_commands"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.selectConnection",
          "group": "z_commands"
        },
        {
          "when": "resourceLangId == yqlReq",
          "command": "vscode-vespa.showClusterInfo",
          "group": "z_commands"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-vespa.selectClusterAsDefault",
          "when": "view == vespaConfigView && viewItem == VESPA_CLUSTER"
        },
        {
          "command": "vscode-vespa.showSelectedClusterInfo",
          "when": "view == vespaConfigView && viewItem == VESPA_CLUSTER"
        },
        {
          "command": "vscode-vespa.openSelectedFile",
          "when": "view == vespaConfigView && viewItem == VESPA_EXPLORER_APP_FILE"
        }
      ],
      "view/title": [
        {
          "command": "vscode-vespa.refreshVespaConfig",
          "when": "view == vespaConfigView",
          "group": "navigation"
        },
        {
          "command": "vscode-vespa.editVespaConfig",
          "when": "view == vespaConfigView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vespa-explorer",
          "title": "Vespa Explorer",
          "icon": "media/vespa.png"
        }
      ]
    },
    "views": {
      "vespa-explorer": [
        {
          "id": "vespaConfigView",
          "name": "",
          "icon": "media/vespa.png",
          "contextualTitle": "Vespa Explorer"
        }
      ]
    },
    "languages": [
      {
        "id": "yqlReq",
        "aliases": [
          "yql"
        ],
        "extensions": [
          ".yql"
        ]
      },
      {
        "id": "yql",
        "aliases": [
          "yql"
        ]
      },
      {
        "id": "sd",
        "aliases": [
          "sd"
        ],
        "extensions": [
          ".sd"
        ]
      }

    ],
    "grammars": [
      {
        "language": "yqlReq",
        "scopeName": "source.yqlReq",
        "path": "./syntaxes/yqlReq.tmLanguage.json"
      },
      {
        "language": "sd",
        "scopeName": "source.sd",
        "path": "./syntaxes/sd.tmLanguage.json"
      },
      {
        "language": "yql",
        "scopeName": "source.yql",
        "path": "./syntaxes/yql.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "yqlReq",
        "path": "./yql-req-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "mocha client/out/**/*.test.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "node-fetch": "^3.3.2",
    "source-map-support": "^0.5.21"
  }
}